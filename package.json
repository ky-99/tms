{
  "name": "task-management-system",
  "version": "1.0.0",
  "description": "Tree-based task management desktop application",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc && webpack",
    "build:main": "tsc",
    "build:renderer": "webpack",
    "start": "electron .",
    "dev": "npm run build && electron .",
    "package": "electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:all": "npm run build && electron-builder --mac --win --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "task-management",
    "sqlite",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/recharts": "^1.8.29",
    "css-loader": "^7.1.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "recharts": "^3.1.0",
    "use-debounce": "^10.0.5",
    "wouter": "^3.7.1"
  },
  "build": {
    "appId": "com.yourcompany.taskmanagement",
    "productName": "Task Management System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "schema.sql",
      "node_modules/better-sqlite3/build/Release/*.node"
    ],
    "extraResources": [
      "schema.sql"
    ],
    "asarUnpack": [
      "**/better-sqlite3/**",
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "identity": null,
      "entitlements": false,
      "entitlementsInherit": false,
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "darkModeSupport": true,
      "type": "distribution"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
